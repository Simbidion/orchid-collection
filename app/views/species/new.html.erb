<% if @species.errors.any? %>
  <div class="alert alert-warning" role="alert">
    <% @species.errors.full_messages.each do |error| %>
      <%= error %><br>
    <% end %>
    </div>
<% end %>

<%= form_with(model: @species, local: true) do |f| %>
  <div>
    <%= f.label :sci_name %>
    <%= f.text_field :sci_name %>
  </div>
  <div>
    <%= f.label :comm_name %>
    <%= f.text_field :comm_name %>
  </div>
  <div>
    <%= f.label :flower_time %>
    <%= f.text_field :flower_time %>
  </div>
  <div>
    <%= f.label :colour %>
    <%= f.text_field :colour %>
  </div>
  <div>
    <%= label :epiphyte, 'Epiphyte' %>
    <%= f.radio_button(:epiphyte, true) %>
    <%= label :epiphyte, 'Not an epiphyte' %>
    <%= f.radio_button(:epiphyte, false) %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
  <%= f.button %>
  </div>
<% end %>